{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "types": ["node", "webgl2", "offscreencanvas"],
    "paths": {
      "@assets/*" : ["assets/*"],
      "@env/*" : ["environments/*"],
      "@store" : ["app/core/store"],
      "@models/*" : ["app/shared/models/*"],
      "@utils" : ["app/shared/utils"],
      "@shared/*" : ["app/shared/*"],
      "@views" : ["app/views"],
      "@services" : ["app/shared/services"],
      "@test" : ["app/views"]
    }
  },
  "files": [
    "main.ts",
    "polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
